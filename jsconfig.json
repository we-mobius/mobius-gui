{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "baseUrl": ".",
    "paths": {
      "Business/*": [
        "./src/business/*"
      ],
      "FreeBusiness/*": [
        "./src/business-free/*"
      ],
      "Interface/*": [
        "./src/interface/*"
      ],
      "Libs/*": [
        "./src/libs/*"
      ],
      "Statics/*": [
        "./src/statics/*"
      ],
      "Images/*": [
        "./src/statics/images/*"
      ],
      "Styles/*": [
        "./src/statics/styles/*"
      ]
    },
    "plugins": [
      {
        "name": "typescript-lit-html-plugin",
        "tags": [
          "template",
          "raw",
          "mark",
          "style",
          "actuate",
          "view",
          "html"
        ]
      }
    ]
  },
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "dev",
    "release",
    "scripts"
  ]
}
